<% if flash[:messages] %>
  <div id="error_explanation">
    <font color="red"><h2>There were some errors:</h2></font>
    <ul>
      <% flash[:messages].each do |message| %>
        <font color="red"><li><%= message %></li></font>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @runner do |f| %>
    <p>
        <%= f.label :name %>
        <%= f.text_field :name %>
    </p>
    <p>
        <%= f.label :gender %>
        <%= f.text_field :gender %>
    </p>
    <p>
        <%= f.label :birthday %>
        <%= f.text_field :birthday %>
    </p>
    <p>
        <%= f.label :location_city %>
        <%= f.text_field :location_city %>
    </p>
    <p>
        <%= f.label :location_country %>
        <%= f.text_field :location_country %>
    </p>
    <p>
        <%= f.label :experience_level %>
        <%= f.text_field :experience_level %>
    </p>
    <p>
        <%= f.submit %>
    </p
<% end %>

    
  